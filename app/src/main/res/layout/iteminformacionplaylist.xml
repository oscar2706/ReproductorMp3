<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/playlistImageGrad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/playlists"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/idImageArtist"
            >


            <TextView
                android:id="@+id/infoPlaylistName"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nombre Playlist"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/infoPlaylistNSongs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3 Canciones"
                android:gravity="center"
                android:textColor="@color/colorGrisInhabilitado"
                />
            <TextView
                android:id="@+id/infoPlaylistDuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="âŒš| 8:46"
                android:gravity="center"
                android:textColor="@color/colorGrisInhabilitado"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/infoPlaylistDuration"
        android:backgroundTint="@color/colorGrisBajitoLineas"
        />

</LinearLayout>