<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_card_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/playlistToAddImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/a_blinding" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/playlistToAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de lista"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/playlistToAddNSongs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 canciones" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>